{
  "name": "cordova-plugin-webpack",
  "version": "0.0.2",
  "description": "Cordova Webpack Plugin",
  "cordova": {
    "id": "cordova-plugin-webpack",
    "platforms": [
      "android",
      "ios",
      "browser"
    ]
  },
  "scripts": {
    "upgrade-interactive": "npm-check --update",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "build": "rimraf scripts/* && tsc",
    "lint": "eslint '**/*.{js,ts}' --quiet",
    "lint:fix": "npm run lint -- --fix",
    "commit": "commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kotarella1110/cordova-plugin-webpack.git"
  },
  "keywords": [
    "cordova",
    "webpack",
    "ecosystem:cordova",
    "cordova-android",
    "cordova-ios",
    "cordova-browser"
  ],
  "author": "Kotaro Sugawara",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kotarella1110/cordova-plugin-webpack/issues"
  },
  "homepage": "https://github.com/kotarella1110/cordova-plugin-webpack#readme",
  "dependencies": {
    "@types/webpack": "^4.4.31",
    "ts-node": "^8.1.0",
    "webpack": "^4.31.0",
    "webpack-dev-server": "^3.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.0",
    "@commitlint/config-conventional": "^7.6.0",
    "@commitlint/prompt-cli": "^7.6.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "npm-check": "^5.9.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "npm run lint:fix",
        "git add"
      ]
    },
    "ignore": [
      "node_modules/**",
      "scripts/**"
    ]
  }
}
