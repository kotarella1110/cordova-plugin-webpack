{
  "name": "cordova-plugin-webpack",
  "version": "0.3.3",
  "description": "Cordova Webpack Plugin",
  "cordova": {
    "id": "cordova-plugin-webpack",
    "platforms": [
      "android",
      "ios"
    ]
  },
  "scripts": {
    "upgrade-interactive": "npm-check --update",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "build": "rimraf scripts/* && tsc && webpack",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "commit": "commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kotarella1110/cordova-plugin-webpack.git"
  },
  "keywords": [
    "cordova",
    "webpack",
    "ecosystem:cordova",
    "cordova-android",
    "cordova-ios"
  ],
  "author": "Kotaro Sugawara",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kotarella1110/cordova-plugin-webpack/issues"
  },
  "homepage": "https://github.com/kotarella1110/cordova-plugin-webpack#readme",
  "dependencies": {
    "@types/elementtree": "^0.1.0",
    "@types/findup-sync": "^2.0.1",
    "@types/interpret": "^1.1.1",
    "@types/ip": "^1.1.0",
    "@types/node": "^12.0.7",
    "@types/react-dev-utils": "^9.0.1",
    "@types/rechoir": "^0.6.1",
    "@types/webpack": "^4.4.32",
    "@types/webpack-dev-server": "^3.1.6",
    "@types/yargs-parser": "^13.0.0",
    "cordova-common": "^3.1.0",
    "csp-parse": "0.0.2",
    "current-device": "^0.8.0",
    "elementtree": "^0.1.7",
    "express": "^4.17.1",
    "findup-sync": "^3.0.0",
    "glob": "^7.1.4",
    "interpret": "^1.2.0",
    "ip": "^1.1.5",
    "react-dev-utils": "^9.0.1",
    "rechoir": "^0.7.0",
    "source-map-support": "^0.5.12",
    "webpack": "^4.33.0",
    "webpack-dev-server": "^3.7.1",
    "webpack-inject-plugin": "^1.5.0",
    "yargs-parser": "^13.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/prompt-cli": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "npm-check": "^5.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1",
    "webpack-cli": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "npm run lint:fix",
        "git add"
      ]
    },
    "ignore": [
      "node_modules/**",
      "scripts/**"
    ]
  }
}
